<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.hddesign.androidutils.androidutils"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AndroidUtilTheme">

        <activity
            android:name=".ui.RecyclerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AndroidUtilTheme">
        </activity>

        <activity
            android:name=".ui.ColorPickerActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AndroidUtilTheme">
        </activity>

        <activity
            android:name=".ui.DPadActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:screenOrientation="portrait"
            android:theme="@style/AndroidUtilTheme"
            android:windowSoftInputMode="adjustNothing">
        </activity>

        <activity
            android:name=".ui.DialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AndroidUtilTheme">
        </activity>

        <activity
            android:name=".ui.RulerActivity"
            android:theme="@style/AndroidUtilTheme">
        </activity>

        <activity
            android:name=".ui.PaletteActivity"
            android:configChanges="orientation|screenSize|keyboard|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AndroidUtilTheme">
        </activity>

        <activity
            android:name=".ui.MaterialActivity"
            android:configChanges="orientation|screenSize|keyboard|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AndroidUtilTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MaterialDetailActivity"
            android:theme="@style/AndroidUtilTheme"/>

        <activity
            android:name=".ui.InfoActivity"
            android:theme="@style/AndroidUtilTheme">
        </activity>

    </application>

</manifest>